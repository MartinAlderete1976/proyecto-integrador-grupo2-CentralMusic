<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head', {title: 'Login'}) %> 
<body class="home-container forms-body admin-container form-login">
    <%-include('../partials/header')  %>
    <main>
        <form action="/users/login" method="POST" class="form-addProduct">
            <div class="form-container1 login-container1">
                <div class="new-products-separador"></div>
                <h2>Login</h2>
                <div class="inputs-container1 login-inputs-container">
                    <div class="input-container1">
                        <label for="user">Usuario</label>
                        <input type="text" name="user" id="user" placeholder="Ingresar usuario o email" class="input-style1">
                        <% if (locals.errors && errors.email) { %>
                            <small class="text-danger"><%= errors.email.msg %></small>
                        <% } %>
                        <span class="error-message1 error-msg-register">Usuario o contraeña no validos</span>
                    </div>
                    <div class="input-container1">
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" id="password" placeholder="Ingresar contraseña" class="input-style1">
                        <% if (locals.errors && errors.password) { %>
                            <small class="text-danger"><%= errors.password.msg %></small>
                        <% } %>
                        <span class="error-message1 error-msg-register">Usuario o contraeña no validos</span>
                    </div>
                    <% if (locals.errors && errors.custom) { %>
                        <small class="text-danger"><%= errors.custom.msg %></small>
                    <% } %>
                    <div class="btn-container">
                        <button class="btn-register" type="submit" >Ingresar</button>
                    </div>
                    <div class="input-container1">
                        <a href="">¿Olvidaste tu contraseña?</a><br>
                        <a href="/users/register">¿No tenes cuenta?</a>
                    </div>
                </div>
            </div>
        </form>    
    </main>
    <%-include('../partials/footer')  %> 
</body>
</html>