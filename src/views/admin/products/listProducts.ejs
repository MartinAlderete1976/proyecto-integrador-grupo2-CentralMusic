<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head', {title: 'Listado de productos'})  %> 
<body class="listProduct home-container admin-container">
    
    <%-include('../partials/header')  %> 
    
<main class="tabla">
    <h2>Listado de productos</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Precio</th>
                <th>Categoria</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                
              
                    <tr>
                        <th><a href="product/detail/<%- product.id %> "><%- product.id %></a></th>
                        <td><a href="product/detail/<%- product.id %> "><%- product.marca %></a></td>
                        <td><a href="product/detail/<%- product.id %> "><%- product.model %></a></td>
                        <td><a href="product/detail/<%- product.id %> ">$<%- product.price %></a></td>
                        <td><a href="product/detail/<%- product.id %> "><%- product.category %></a></td>
                        <td><%- product.stock %></td>
                        <td>

                            <% if (product.category === 'guitar') { %>
                                <a href="/admin/products/guitar/edit/<%- product.id %> " class="btn-edit">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            <% } else { %> 
                                <a href="/admin/products/accesory/edit/<%- product.id %> " class="btn-edit">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            
                            <% } %>  
                                <form action="/admin/products/delete/<%- product.id %>?_method=DELETE" method="POST">
                                    <button class="btn-danger">
                                        <i class="fa-solid fa-xmark fa-lg"></i>
                                    </button>
                                </form>
                            
                        </td>    
                    </tr>
            <% }) %>
        </tbody>
    </table>
</main>
 
    
    <%-include('../partials/footer')  %> 
</body>
</html>